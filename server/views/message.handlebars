<div class="container-fluid bodyContenedor fondo-formulario ">
    <div class="row p-2 ">
        <div class="col-10 col-md-5 col-sm-8 m-auto formularios bg-light">
            <h3 class="pt-2 mb-0 font-weight-bold text-center">Comentario para libro</h3>
            <form action="/message/{{idbook}}/{{name}}" method="POST">
                
                <div class="form-group m-0">
                    <label for="texto"></label>
                    <textarea id="texto" name="message" placeholder="Escribe aqui.." cols="40" rows="6" class="form-control"
                        required></textarea>
                </div>
                <div class="form-group m-4 text-center">
                    <button name="submit" type="submit" class="btn btn-secondary btn-lg btn-block">Enviar comentario</button>
                </div>
            </form>
        </div>

    </div>

</div>