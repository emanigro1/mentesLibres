    <h1 class="text-center" style="font-family: -apple-system-">Mis favoritos</h1>

<div class="d-flex align-content-start flex-wrap  justify-content-around">
    {{#each books}}

    <div class="card border-secondary cardall cardas  m-2 p-2 contenedorCards">
        <img class="card-img-top card-img-topA" src="images/books/{{this.img}}" alt="Card image cap">
        <div class="textoCartas card-body p-2 text-center">
            <h2 class="">Titulo</h2>
            <p>{{this.titulo}}</p>
            <h2 class="">Autor</h2>
            <p>{{this.autor}}</p>
            <h2>Editorial: </h2>
            <p>{{this.editorial}}</p>
            <h2>ISBN: </h2>
            <p>{{this.isbn}}</p>
            <h2>Tematica: </h2>
            <p>{{this.tematica}}</p>

            <a class="btn btn-danger" href="/favorites/remove/{{this.id}}" role="button">Eliminar</a>

        </div>
    </div>


    {{/each}}
</div>