<div class="container-fluid bodyContenedor fondo-formulario ">
	<div class="row p-2 ">
		<div class="col-10 col-md-5 col-sm-8 m-auto formularios bg-light">
			<h3 class="pt-2 mb-0 font-weight-bold">Contacto</h3>
			<form>
				<div class="form-group m-0">
					<label for="nombre"></label>
					<input id="nombre" name="nombre" placeholder="Nombre y Apellido" type="text" required
						class="form-control">
				</div>
				<div class="form-group m-0">
					<label for="email"></label>
					<input id="email" name="email" placeholder="E-Mail" type="email" class="form-control" required>
				</div>
				<div class="form-group m-0">
					<label for="texto"></label>
					<textarea id="texto" name="texto" placeholder="Comentarios" cols="40" rows="6" class="form-control"
						required></textarea>
				</div>
				<div class="form-group m-4 text-center">
					<button name="submit" type="submit" class="btn btn-secondary btn-lg btn-block">Enviar</button>
				</div>
			</form>
		</div>
		<div class="fondo-contacto col-5 col-sm-3 col-md-2 m-md-auto mt-2 mx-auto ">

			<h3 class="text-center pt-2 pb-3 strong text-white font-weight-bold">Redes</h3>

			<ul class="redes m-auto">
				<li>
					<a href="#"><img src="../images/contacto-facebook.png" height="50">
					</a>
				</li>
				<li>
					<a href="#"><img src="../images/contacto.instagram.png" height="50"></a>
				</li>
				<li>
					<a href="#"><img src="../images/contacto-gmail.png" height="50">
					</a>
				</li>
				<li>
					<a href="#"><img src="../images/contacto-whatsapp.png" height="50">
					</a>
				</li>

			</ul>

		</div>
	</div>

</div>